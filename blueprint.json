  "software": {
    "base": {
      "name": "odoo",
      "framework": "python3.7",
      "deployment_type": "web",
      "http_protocol": "http_and_https",
      "framework_port_override": 8069,
      "memory": {
        "required": 256,
        "recommended": 384
      },
      "installation_report": "Goto _Engines_Builder(http_protocol)://_Engines_Builder(fqdn)/\r\nSelect Database _Engines_Environment(dbname)\r\nlogin admin\r\npassword admin"
    },
    "scripts": {
      "start": {
        "language": "sh",
        "content": "#!/bin/sh\r\ncd /home/app\r\n. /home/app/venv/bin/activate\r\n/home/app/odoo.bin --proxy-mode --no-database-list \r\nsleep 5000\r\n\r\n exit"
      },
      "install": {
        "language": "sh",
        "content": "#!/bin/sh\r\n. /home/app/venv/bin/activate\r\ncd /home/app\r\n for mod in `cat requirements.txt\r\n  do\r\n     python${python_version} -m pip install --upgrade  $mod\r\n  done     \r\n#pip install -r requirements.txt\r\n\r\n\r\nmkdir -p /home/app/log/odoo\r\nmkdir -p /home/app/odoo/addons\r\nmkdir -p /home/app/addons\r\ntouch /home/app/log/fresh\r\n"
      },
      "post_install": {
        "language": "sh"
      },
      "shutdown": {
        "language": "sh"
      }
    },
    "system_packages": [
      {
        "package": "wkhtmltopdf"
      }
    ],
    "installed_packages": [
      {
        "name": "odoo",
        "source_url": "https://github.com/odoo/odoo.git",
        "destination": "./",
        "extraction_command": "git",
        "path_to_extracted": "odoo"
      }
    ],
    "required_modules": [
      {
        "name": "rtlcss",
        "type": "npm"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "service_name": "data",
          "volume_src": " ",
          "engine_path": "data",
          "permissions": "rw",
          "user": "_Engines_Builder(data_uid)",
          "group": "_Engines_Builder(group_uid)",
          "fw_user": "_Engines_Builder(cont_user_id)",
          "exclude_from_backup": "false"
        }
      },
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "database/sql/pgsql",
        "variables": {
          "database_name": "_Engines_Builder(engine_name)",
          "database_host": "_Engines_System(pgsql_host)",
          "dbusername": "_Engines_Builder(engine_name)",
          "dbpassword": "_Engines_System(random(10))",
          "collation": "C",
          "encoding": "utf8",
          "full_access": "false"
        }
      }
