        "content": "#!/bin/sh\r\ncd /home/app\r\n\r\nfresh=\"\"\r\nif test -f /home/app/log/fresh\r\n then\r\n   fresh=\"-i all\"\r\n   rm /home/app/log/fresh\r\nfi\r\nPID_FILE=/home/app/logs/odoo.pid\r\nexport PID_FILE\r\n. /home/engines/functions/trap.sh\r\n\r\nmkdir -p  /engines/var/run/flags/\r\n\r\n./odoo-bin -c debian/odoo.conf $fresh -d $dbname -r $dbuser   --db_password=$dbpasswd --db_host=$dbhost --without-demo=\"all\"  -D $VOLDIR/     --smtp=_Engines_System(smtp_host) --email-from=$from_email  --pidfile=/home/app/logs/odoo.pid &\r\n\r\ntouch /engines/var/run/flags/startup_complete\r\n wait \r\n\r\n rm /engines/var/run/flags/startup_complete\r\n exit"
      },
      "install": {
        "language": "sh",
        "content": "#!/bin/sh\r\n#cd /home/app/local\r\n#python setup.py install\r\npip install -r requirements.txt\r\nnpm install -g less less-plugin-clean-css\r\ncd /home/app\r\npython setup.py install\r\nmkdir -p /home/app/log/odoo\r\nmkdir -p /home/app/odoo/addons\r\nmkdir -p /home/app/addons\r\ntouch /home/app/log/fresh\r\n"
